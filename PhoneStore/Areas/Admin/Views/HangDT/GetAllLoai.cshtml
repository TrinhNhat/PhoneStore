@model List<PhoneStore.Models.HANGDIENTHOAI>

@{
    ViewBag.Title = "Quản lý hãng điện thoại";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section title {
    Quản lý hãng điện thoại
}

<br />
<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <a href="/Admin/HangDT/AddLoai" role="button" class="btn btn-primary">
            <i class="fa fa-plus"></i>&nbsp;Thêm hãng
        </a>
    </div>
</div>
<div class="=row">
    <div class="col-md-8 col-md-offset-2">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="col-sm-2">Mã hãng</th>
                    <th class="col-sm-3">Tên hãng điện thoại</th>
                    <th class="col-sm-3">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sp in Model)
                {
                    <tr>
                        <td>@sp.MaHang</td>
                        <td>@sp.TenHang</td>
                        <td>
                            <a class="btn btn-danger btn-xs" href="@Url.Action("RemoveLoai", "HangDT", new { id = sp.MaHang })" role="button" title="Xóa">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </a>
                            <a class="btn btn-primary btn-xs" href="@Url.Action("EditLoai", "HangDT", new { id = sp.MaHang })" role="button" title="Cập nhật">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <nav>
            <ul class="pagination">
                <li class="@(ViewBag.CurPage == 1 ? "disabled" : "")">
                    <a href="@(ViewBag.CurPage == 1 ? "#" : @Url.Action("GetAllLoai", "HangDT", new { page = ViewBag.CurPage - 1 }))" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                @for (int i = 1; i <= ViewBag.PageCount; i++)
                {
                    <li class="@(ViewBag.CurPage == i ? "active" : "")"><a href="@Url.Action("GetAllLoai", "HangDT", new { page = i })">@i</a></li>
                }
                <li class="@(ViewBag.CurPage == ViewBag.PageCount ? "disabled" : "")">
                    <a href="@(ViewBag.CurPage == ViewBag.PageCount ? "#" : @Url.Action("GetAllLoai", "HangDT", new { page = ViewBag.CurPage + 1 }))" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
