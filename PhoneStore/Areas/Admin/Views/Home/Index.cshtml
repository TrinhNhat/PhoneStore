@model List<PhoneStore.Models.TAIKHOAN>

@{
    ViewBag.Title = "Quản lý tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section title {
    Danh sách người dùng
    }

<div class="row">
    <div class="col-lg-12">
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <a class="btn btn-primary fa-fa-plus" href="/Admin/Home/Create">Thêm mới</a>
                            </div>
                        </div>
                    </div>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên đăng nhập</th>
                                <th>Email</th>
                                <th>Loại tài khoản</th>
                                <th>Họ tên</th>
                                <th>Ngày sinh</th>
                                <th>&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.MaTK">

                                    <td>@item.TenDN</td>
                                    <td>@item.Email</td>
                                    <td>@item.LoaiTK</td>
                                    <td>@item.TenKH</td>
                                    <td>@Convert.ToDateTime(item.NgaySinh).ToString("MM/dd/yyyy").Split(' ')[0]</td>
                                    <td>
                                        <a class="btn btn-danger btn-xs" href="@Url.Action("Delete", "Home", new { id = item.MaTK })" role="button" title="Xóa">
                                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                        </a>
                                       
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                   
                    <nav>
                        <ul class="pagination">
                            <li class="@(ViewBag.CurPage == 1 ? "disabled" : "")">
                                <a href="@(ViewBag.CurPage == 1 ? "#" : @Url.Action("Index", "Home", new { page = ViewBag.CurPage - 1 }))" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            @for (int i = 1; i <= ViewBag.PageCount; i++)
                            {
                                <li class="@(ViewBag.CurPage == i ? "active" : "")"><a href="@Url.Action("Index", "Home", new { page = i })">@i</a></li>
                            }
                            <li class="@(ViewBag.CurPage == ViewBag.PageCount ? "disabled" : "")">
                                <a href="@(ViewBag.CurPage == ViewBag.PageCount ? "#" : @Url.Action("Index", "Home", new { page = ViewBag.CurPage + 1 }))" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
    </div>
</div>
